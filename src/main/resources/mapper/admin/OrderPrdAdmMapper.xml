<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.routy.routyback.mapper.admin.IOrderPrdAdmDAO">

<select id="detailPrdOrder" resultType="com.routy.routyback.dto.OrderPrdDTO">
	SELECT *
	FROM PAY_PRODUCT_MAPPING pp
		JOIN PRODUCT p ON p.prdNo=pp.prdNo
	WHERE pp.odNo = #{odNo}
	ORDER BY pp.ppMapNo ASC
</select>
</mapper>